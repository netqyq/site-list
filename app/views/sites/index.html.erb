<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<%= link_to 'New Site', new_site_path, class: "btn btn-default btn-xs" %>
<br>
<br>

<%= form_tag sites_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="2"></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= link_to site.name, site.url, target: "_blank"  %></td>
        <td><%= site.url %></td>
        <td><%= site.description %></td>

        <td><%= site.user.username %></td>
        <td><%= link_to 'Show', site %></td>
        <% if site.user == current_user %>
          <td><%= link_to 'Edit', edit_site_path(site) %></td>
          <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>




